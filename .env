# Backend API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=10000

# App Configuration
REACT_APP_NAME=Rapido Corporate
REACT_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# React Query Configuration (in milliseconds)
REACT_APP_QUERY_STALE_TIME=30000
REACT_APP_QUERY_REFETCH_INTERVAL=30000
REACT_APP_QUERY_FAST_REFETCH_INTERVAL=10000
REACT_APP_QUERY_SLOW_REFETCH_INTERVAL=60000

# Optional: Socket.io configuration (if needed later)
REACT_APP_SOCKET_URL=http://localhost:5000

# Optional: Google Maps API (if needed for ride tracking)
# REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Optional: Notification settings
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_NOTIFICATION_TIMEOUT=5000